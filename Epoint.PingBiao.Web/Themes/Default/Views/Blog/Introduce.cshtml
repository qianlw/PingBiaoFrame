    <button type="submit" class="pure-button pure-button-primary">搜索</button>
</form>
<div class="posts">
    <section class="post">
        <header class="post-header">
            <h2 class="post-title" style="text-align:center;">欢迎使用Epoint.PingBiao</h2>
        </header>
        <div class="post-description-detail" >
            <div class="pure-g">
                <div class="pure-u-1">
                    <div style="width: 198px;height: 99px;margin: 0 auto;outline: 0;display: block; margin-bottom:10px;">
                        <img src="~/Content/Admin/img/logo.png" style="margin: 0 auto;outline: 0;display: block; float:left; " />
                        <img src="~/Content/Admin/img/logo_2.png" style="margin: 0 auto;outline: 0;display: block;float:left;" />
