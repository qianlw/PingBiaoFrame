    @{
        Epoint.PingBiao.Model.Sys.SiteConfig site = ViewData["SiteConfig"] as Epoint.PingBiao.Model.Sys.SiteConfig;
        }
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@site.SiteName - @ViewBag.Title</title>
    <meta name="keywords" content="@(string.IsNullOrEmpty(ViewBag.SiteKeywords)?site.SiteKeywords:ViewBag.SiteKeywords)"  />
    <meta name="description" content="@(string.IsNullOrEmpty(ViewBag.SiteDescr)?site.SiteDescr:ViewBag.SiteDescr)" />
    <link rel="shortcut icon" type="image/png" href="/favicon.png" />
    <link href="/Content/PureUI/pureplus-min.css" rel="stylesheet" />
    <link href="/Content/Blog/css/blog.css" rel="stylesheet" />
    <link href="/Content/Font-Awesome-4.5.0/css/font-awesome.css" rel="stylesheet" />
</head>
<body class="pure-family">
    <div class="pure-menu-dropdown">
        <div class="pure-menu-setup">
            <span></span>
        </div>
        <div class="pure-menu pure-menu-dropdown-list">
            <ul class="pure-menu-list">
                <li class="pure-menu-item pure-menu-selected"><a href="@Url.Action("Index", "Blog")" class="pure-menu-link"><i class="fa fa-home"></i>首页</a></li>
                <li class="pure-menu-item"><a href="/PureUI/index.html" target="_blank" class="pure-menu-link"><i class="fa fa-heart"></i>Pure</a></li>
                <li class="pure-menu-item"><a href="http://RainbowInTheSky.cnblogs.com/" class="pure-menu-link"><i class="fa fa-map"></i>漫漫洒洒</a></li>
                @*<li class="pure-menu-item"><a href="/nav.html" class="pure-menu-link"><i class="fa fa-fort-awesome"></i>页面导航</a></li>*@
            </ul>
        </div>
    </div>
    <div id="layout" class="pure-g">
        <div class="sidebar pure-u-1 pure-u-md-1-5">
            <div class="header">
                <h1 class="brand-title">1111的个人主页</h1>
                <h2 class="brand-tagline">使用Pure CSS创建的主页<div class="pure-u-1-1">QQ交流群:110826636</div></h2>
                <nav class="nav">
                    <ul class="nav-list">
                        <li class="nav-item">
                            <a class="pure-button" href="@Url.Action("Index", "Blog")">首页</a>
                            <a class="pure-button" href="/PureUI/index.html" target="_blank">Pure</a>
                            <a class="pure-button" href="http://RainbowInTheSky.cnblogs.com/">漫漫洒洒</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="pure-coloursLine-h" style="margin-left:99%;"></div>
            <div class="pure-coloursLine-w"></div>
        </div>
        <div class="content pure-u-1 pure-u-md-4-5">
            @RenderBody()
            <div class="footer">
                <div class="pure-menu pure-menu-horizontal">
                    <ul>
                        <li class="pure-menu-item"><a href="http://www.cnblogs.com/" class="pure-menu-link">博客园</a></li>
                        <li class="pure-menu-item"><a href="http://RainbowInTheSky.cnblogs.com/" class="pure-menu-link">博客园-漫漫洒洒</a></li>
                        <li class="pure-menu-item"><a href="http://purecss.io/" class="pure-menu-link">Pure</a></li>
                        <li class="pure-menu-item"><a href="http://www.stackoverflow.com" class="pure-menu-link">stackoverflow</a></li>
                        <li class="pure-menu-item"><a href="http://github.com/yahoo/pure/" class="pure-menu-link">GitHub</a></li>
                    </ul>
                </div>
                <div class="pure-menu pure-menu-horizontal">@site.SiteCopyRight</div>
            </div>
        </div>
    </div>
    <!--回到顶部 begin-->
    <a href="javascript:scroll(0,0);" class="pure-button pure-top" title="回到顶部"><i class="fa  fa-chevron-up "></i></a>
    <!--回到顶部 end-->
    <script src="/Content/Js/jquery-1.9.1.min.js"></script>
    <script src="/Content/Js/jquery.tmpl.js"></script>
    <script src="/Content/Js/utils.js"></script>
    <script src="/Content/Js/IE.js"></script>
    <script src="/Content/Blog/js/public.js"></script>

    @if (IsSectionDefined("JavaScript"))
    {
        @RenderSection("JavaScript", false)
    }
    else
    {
        <script type="text/javascript">
            console.log("1111");
        </script>
    }
</body>
</html>

